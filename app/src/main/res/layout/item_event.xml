<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="@dimen/spacing_xsmall"
    android:background="@drawable/bg_item_white_round"
    android:layout_marginStart="@dimen/spacing_standard"
    android:layout_marginEnd="@dimen/spacing_standard"
    tools:ignore="contentDescription">

    <ImageView
        android:id="@+id/iv_event"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="@dimen/spacing_large"
        tools:src="@drawable/ic_live_black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_event_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/grey_main_title"
        android:textSize="@dimen/text_size_medium"
        android:layout_marginStart="@dimen/spacing_xlarge"
        android:layout_marginEnd="@dimen/spacing_xsmall"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/tv_event_info"
        app:layout_constraintLeft_toRightOf="@id/iv_event"
        app:layout_constraintRight_toLeftOf="@id/ic_event_details"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Novica 4" />

    <TextView
        android:id="@+id/tv_event_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_xlarge"
        android:layout_marginEnd="@dimen/spacing_xsmall"
        android:layout_marginTop="@dimen/spacing_xxsmall"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/grey_subtitle"
        android:textSize="@dimen/text_size_small"
        tools:text="Šport • 25.12.2018"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/tv_event_title"
        app:layout_constraintRight_toLeftOf="@id/ic_event_details"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_event"/>

    <ImageView
        android:id="@+id/ic_event_details"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="@dimen/spacing_large"
        android:src="@drawable/ic_right"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>